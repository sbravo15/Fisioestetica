@model G7.Models.UsuarioObj
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="row justify-content-center align-items-center">
                <div class="col-md-4 mb-4 mb-md-0">
                    <img class="d-block img-fluid" src="~/img/Mossa-icon.jpg" alt="MOSSA Logo">
                </div>

                <div class="col-md-8">
                    <h2 class="text-center">Iniciar sesión</h2>

                    @using (Html.BeginForm("ValidarAcceso", "Home", FormMethod.Post))
                    {
                        <form class="login-form">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="text">Correo</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @type = "text" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1" class="text">Contraseña</label>
                                @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control", @placeholder = "Contraseña", @type = "password" })
                            </div>

                            <div class="form-check">
                                <button type="submit" class="btn btn-login float-right">Siguiente</button>

                                <a href="@Url.Action("PrimerRegistro", "Usuario")" class="btn btn-primary">Crear Cuenta</a>
                            </div>
                            

                        </form>
                    }
                </div>
            </div>

            
        </div>
    </div>
</div>
