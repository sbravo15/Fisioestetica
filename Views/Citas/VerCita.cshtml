@model IEnumerable<G7.Models.CitasObj>

@{
    ViewBag.Title = "VerCita";
}

<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf-8' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.5/index.global.min.js'></script>
    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {     
                height: '100%',
                expandRows: true,
                slotMinTime: '08:00',
                slotMaxTime: '20:00',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listMonth'
                },
                initialDate: '2023-03-15',
                navLinks: true, 
                editable: true,
                selectable: true,
                dayMaxEvents: true,
                nowIndicator: true,
                
                events: [
                    {
                        title: 'Final de la reunion',
                        start: '2023-03-22T19:45:00',
                        constraint: 'businessHours'
                    }, 
                    {
                        title: 'Final de clases',
                        start: '2023-03-22T21:00:00',
                        constraint: 'businessHours'
                    }, 
                    {
                        title: 'Clases Con Nicole',
                        start: '2023-03-22T18:00:00',
                        constraint: 'businessHours'
                    },  
                    {
                        title: 'Reunion con Nico',
                        start: '2023-03-22T19:00:00',
                        end: '2023-03-22T19:30:00',
                        constraint: 'Reunion de Sprints',
                        color: '#fff'
                    },
                    {
                        title: 'Reunion Avance Sprint 4',
                        start: '2023-03-24T21:00:00',
                        end: '2023-03-26T20:00:00',
                        constraint: 'Reunion de Sprints',
                        color: '#257e4a'
                    }, 
                ]
            });
            calendar.render();
        });

    </script>
    <style>

    body {
    margin: 40px 10px;
    padding: 0;
    font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
    font-size: 14px;
    }

    #calendar {
    max-width: 1100px;
    margin: 0 auto;
    }

    </style>
</head>
<body>
    <div id='calendar'></div>
</body>
</html>